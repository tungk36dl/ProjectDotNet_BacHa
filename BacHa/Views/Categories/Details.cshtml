@model BacHa.Models.Entity.Category

@{
    ViewData["Title"] = "Chi tiết Thể loại";
}

<h1>Chi tiết Thể loại</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin Thể loại</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Tên thể loại:</dt>
                    <dd class="col-sm-9">
                        <strong>@Model.Name</strong>
                    </dd>

                    <dt class="col-sm-3">Mô tả:</dt>
                    <dd class="col-sm-9">@(Model.Description ?? "-")</dd>

                    <dt class="col-sm-3">Thể loại cha:</dt>
                    <dd class="col-sm-9">@(Model.Parent?.Name ?? "-")</dd>

                    <dt class="col-sm-3">Trạng thái:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Không hoạt động</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Ngày tạo:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                    <dt class="col-sm-3">Ngày cập nhật:</dt>
                    <dd class="col-sm-9">@(Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "-")</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Thao tác</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Sửa Thể loại
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa Thể loại
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại Danh sách
                    </a>
                </div>
            </div>
        </div>

        @if (Model.Children.Any())
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h5>Thể loại con</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var child in Model.Children)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a asp-action="Details" asp-route-id="@child.Id" class="text-decoration-none">
                                    @child.Name
                                </a>
                                @if (child.IsActive)
                                {
                                    <span class="badge bg-success rounded-pill">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary rounded-pill">Không hoạt động</span>
                                }
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
