@model IEnumerable<BacHa.Models.Entity.Category>

@{
    ViewData["Title"] = "Quản lý Thể loại";
}

<h1>Quản lý Thể loại</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Tạo Thể loại Mới
        </a>
        <a asp-action="Index" class="btn btn-secondary" asp-route-page="1">
            <i class="fas fa-refresh"></i> Làm mới
        </a>
    </div>
    <div class="col-md-6">
        <form method="get" class="d-flex">
            <input type="text" name="Query" class="form-control me-2" placeholder="Tìm kiếm thể loại..." value="@ViewBag.Search?.Query">
            <select name="IsActive" class="form-select me-2" style="width: auto;">
                <option value="">Tất cả trạng thái</option>
                <option value="true" selected="@(ViewBag.Search?.IsActive == true)">Hoạt động</option>
                <option value="false" selected="@(ViewBag.Search?.IsActive == false)">Không hoạt động</option>
            </select>
            <button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tên thể loại</th>
                <th>Mô tả</th>
                <th>Thể loại cha</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th>Ngày cập nhật</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@item.Name</strong>
                    </td>
                    <td>@(item.Description ?? "-")</td>
                    <td>@(item.Parent?.Name ?? "-")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Không hoạt động</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(item.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i> Chi tiết
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-tags fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Không tìm thấy thể loại nào</h4>
        <p class="text-muted">Tạo thể loại đầu tiên để bắt đầu.</p>
        <a asp-action="Create" class="btn btn-primary">Tạo Thể loại</a>
    </div>
}

@{
    var search = ViewBag.Search as BacHa.Models.Service.CategoryService.Dto.CategorySearch ?? new BacHa.Models.Service.CategoryService.Dto.CategorySearch();
    var page = search.Page <= 0 ? 1 : search.Page;
    var pageSize = search.PageSize <= 0 ? 10 : search.PageSize;
}

<nav aria-label="Category pagination">
    <ul class="pagination justify-content-center">
        <li class="page-item @(page <= 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-Page="@(page-1)" asp-route-PageSize="@pageSize" asp-route-Query="@search.Query" asp-route-IsActive="@search.IsActive">Trước</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Trang @(page)</span>
        </li>
        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-Page="@(page+1)" asp-route-PageSize="@pageSize" asp-route-Query="@search.Query" asp-route-IsActive="@search.IsActive">Tiếp</a>
        </li>
    </ul>
</nav>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
