@{
    ViewData["Title"] = "Nhân viên Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-user-tie me-2"></i>Nhân viên Dashboard
                </h1>
                <div class="text-muted">
                    <i class="fas fa-user me-1"></i>
                    Chào mừng, @User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Quick Stats Cards -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng Sản phẩm
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">--</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Sản phẩm Mới
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">--</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-plus-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Danh mục
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">--</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tags fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Actions -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-tools me-2"></i>Quản lý Sản phẩm
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-block">
                                <i class="fas fa-list me-2"></i>Danh sách Sản phẩm
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Products" asp-action="Create" class="btn btn-success btn-block">
                                <i class="fas fa-plus me-2"></i>Thêm Sản phẩm Mới
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Categories" asp-action="Index" class="btn btn-info btn-block">
                                <i class="fas fa-tags me-2"></i>Quản lý Danh mục
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Products" asp-action="Shop" class="btn btn-warning btn-block">
                                <i class="fas fa-store me-2"></i>Xem Cửa hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar me-2"></i>Thống kê Nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="mb-3">
                            <i class="fas fa-chart-pie fa-3x text-primary"></i>
                        </div>
                        <p class="text-muted">Thống kê chi tiết đang được phát triển</p>
                        <button class="btn btn-outline-primary btn-sm" onclick="alert('Chức năng thống kê đang phát triển')">
                            <i class="fas fa-chart-line me-1"></i>Xem Thống kê
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Products -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock me-2"></i>Sản phẩm Gần đây
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-info-circle me-2"></i>
                        Danh sách sản phẩm gần đây sẽ được hiển thị ở đây
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt me-2"></i>Thao tác Nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <button class="btn btn-outline-primary btn-block" onclick="alert('Chức năng tìm kiếm nâng cao đang phát triển')">
                                <i class="fas fa-search me-1"></i>Tìm kiếm Nâng cao
                            </button>
                        </div>
                        <div class="col-md-3 mb-2">
                            <button class="btn btn-outline-success btn-block" onclick="alert('Chức năng xuất dữ liệu đang phát triển')">
                                <i class="fas fa-download me-1"></i>Xuất Dữ liệu
                            </button>
                        </div>
                        <div class="col-md-3 mb-2">
                            <button class="btn btn-outline-info btn-block" onclick="alert('Chức năng sao lưu đang phát triển')">
                                <i class="fas fa-save me-1"></i>Sao lưu Dữ liệu
                            </button>
                        </div>
                        <div class="col-md-3 mb-2">
                            <button class="btn btn-outline-warning btn-block" onclick="alert('Chức năng cài đặt đang phát triển')">
                                <i class="fas fa-cog me-1"></i>Cài đặt
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .text-xs {
        font-size: 0.7rem;
    }
    .text-gray-300 {
        color: #dddfeb !important;
    }
    .text-gray-800 {
        color: #5a5c69 !important;
    }
</style>
