@using BacHa.Helper
@model BacHa.Models.Entity.Product

@{
    ViewData["Title"] = "Xóa Sản phẩm";
}

<h1>Xóa Sản phẩm</h1>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Cảnh báo!</h4>
    <p>Bạn có chắc chắn muốn xóa sản phẩm này không? Hành động này không thể hoàn tác.</p>
    <hr>
    <p class="mb-0">Tất cả thông tin liên quan đến sản phẩm này sẽ bị xóa vĩnh viễn.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin Sản phẩm sẽ bị xóa</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        @Html.ProductImageResponsive(Model.ImageUrl, Model.Name)
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Tên sản phẩm:</dt>
                            <dd class="col-sm-8">
                                <strong>@Model.Name</strong>
                            </dd>

                            <dt class="col-sm-4">Mô tả:</dt>
                            <dd class="col-sm-8">@(Model.Description ?? "-")</dd>

                            <dt class="col-sm-4">Thể loại:</dt>
                            <dd class="col-sm-8">@(Model.Category?.Name ?? "-")</dd>

                            <dt class="col-sm-4">Giá:</dt>
                            <dd class="col-sm-8">
                                <span class="text-success">@Html.FormatVNDForProduct(Model.Price)</span>
                            </dd>

                            <dt class="col-sm-4">Tồn kho:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Stock > 0)
                                {
                                    <span class="badge bg-success">@Model.Stock sản phẩm</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Trạng thái:</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Không hoạt động</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Ngày tạo:</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Xác nhận Xóa</h5>
            </div>
            <div class="card-body">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xác nhận Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Hủy bỏ
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5>Lưu ý</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-exclamation-triangle text-warning"></i> Hành động này không thể hoàn tác</li>
                    <li><i class="fas fa-database text-info"></i> Dữ liệu sẽ bị xóa vĩnh viễn</li>
                    <li><i class="fas fa-link text-danger"></i> Các liên kết đến sản phẩm này sẽ bị hỏng</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
