@using BacHa.Helper
@model IEnumerable<BacHa.Models.Entity.Product>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<h1>Quản lý Sản phẩm</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Tạo Sản phẩm Mới
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-refresh"></i> Làm mới
        </a>
    </div>
    <div class="col-md-6">
        <form method="get" class="d-flex flex-wrap gap-2">
            <input type="text" name="Query" class="form-control me-2" placeholder="Tìm kiếm sản phẩm..." value="@ViewBag.Search?.Query" style="min-width: 200px;">
            <select name="CategoryId" class="form-select me-2" style="width: auto;">
                <option value="">Tất cả loại sản phẩm</option>
                @if (ViewBag.Categories != null)
                {
                    @foreach (var category in ViewBag.Categories as List<BacHa.Models.Entity.Category>)
                    {
                        <option value="@category.Id" selected="@(ViewBag.Search?.CategoryId == category.Id)">@category.Name</option>
                    }
                }
            </select>
            <select name="IsActive" class="form-select me-2" style="width: auto;">
                <option value="">Tất cả trạng thái</option>
                <option value="true" selected="@(ViewBag.Search?.IsActive == true)">Hoạt động</option>
                <option value="false" selected="@(ViewBag.Search?.IsActive == false)">Không hoạt động</option>
            </select>
            <button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Thể loại</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ProductImage(item.ImageUrl, item.Name, 50, 50)
                    </td>
                    <td>
                        <strong>@item.Name</strong>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <br><small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                        }
                    </td>
                    <td>@(item.Category?.Name ?? "-")</td>
                    <td>
                        @if(item.Price > 20000000)
                        {
                            <p class="fw-bold text-success">@Html.FormatVNDForProduct(item.Price)</p>
                        }
                        else
                        {
                            <p class=" text-success">@Html.FormatVNDForProduct(item.Price)</p>

                        }
                    </td>
                    <td>
                        @if (item.Stock > 0)
                        {
                            <span class="badge bg-success">@item.Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Hết hàng</span>
                        }
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Không hoạt động</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        @* 2. Dùng ActionLink để tạo thẻ <a> *@
                        @Html.ActionLink("Xem chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm me-1" })
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm me-1" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-box fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Không tìm thấy sản phẩm nào</h4>
        <p class="text-muted">Tạo sản phẩm đầu tiên để bắt đầu.</p>
        <a asp-action="Create" class="btn btn-primary">Tạo Sản phẩm</a>
    </div>
}

@{
    var search = ViewBag.Search as BacHa.Models.Service.ProductService.Dto.ProductSearch ?? new BacHa.Models.Service.ProductService.Dto.ProductSearch();
    var page = search.Page <= 0 ? 1 : search.Page;
    var pageSize = search.PageSize <= 0 ? 10 : search.PageSize;
}

<nav aria-label="Product pagination">
    <ul class="pagination justify-content-center">
        <li class="page-item @(page <= 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-Page="@(page-1)" asp-route-PageSize="@pageSize" asp-route-Query="@search.Query" asp-route-CategoryId="@search.CategoryId" asp-route-IsActive="@search.IsActive">Trước</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Trang @(page)</span>
        </li>
        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-Page="@(page+1)" asp-route-PageSize="@pageSize" asp-route-Query="@search.Query" asp-route-CategoryId="@search.CategoryId" asp-route-IsActive="@search.IsActive">Tiếp</a>
        </li>
    </ul>
</nav>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}