@using BacHa.Helper
@model IEnumerable<BacHa.Models.Entity.Product>

@{
    ViewData["Title"] = "Cửa hàng";
}

<div class="container-fluid">


    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-primary text-white p-4 rounded">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="display-4 mb-0">
                            <i class="fas fa-store me-3"></i>Cửa hàng BacHa
                        </h1>
                        <p class="lead mb-0">Khám phá những sản phẩm tuyệt vời</p>
                    </div>
                    <div>
                        <button class="btn btn-light" onclick="showViewHistory()">
                            <i class="fas fa-history me-2"></i>Lịch sử xem
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label for="Query" class="form-label">Tìm kiếm sản phẩm</label>
                            <input type="text" name="Query" class="form-control" placeholder="Nhập tên sản phẩm..." value="@ViewBag.Search?.Query">
                        </div>
                        <div class="col-md-3">
                            <label for="CategoryId" class="form-label">Thể loại</label>
                            <select name="CategoryId" class="form-select">
                                <option value="">Tất cả thể loại</option>
                                @if (ViewBag.Categories != null)
                                {
                                    @foreach (var category in ViewBag.Categories as List<BacHa.Models.Entity.Category>)
                                    {
                                        <option value="@category.Id" selected="@(ViewBag.Search?.CategoryId == category.Id)">@category.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="SortBy" class="form-label">Sắp xếp</label>
                            <select name="SortBy" class="form-select">
                                <option value="">Mặc định</option>
                                <option value="Name">Tên A-Z</option>
                                <option value="NameDesc">Tên Z-A</option>
                                <option value="Price">Giá thấp đến cao</option>
                                <option value="PriceDesc">Giá cao đến thấp</option>
                                <option value="CreatedAt">Mới nhất</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search me-2"></i>Tìm kiếm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 product-card shadow-sm">
                        <div class="position-relative">
                            @Html.ProductImageResponsive(product.ImageUrl, product.Name)
                            @if (product.Stock <= 0)
                            {
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-danger">Hết hàng</span>
                                </div>
                            }
                            else if (product.Stock <= 10)
                            {
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-warning">Sắp hết</span>
                                </div>
                            }
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" title="@product.Name">
                                @product.Name
                            </h5>
                            
                            @if (!string.IsNullOrEmpty(product.Description))
                            {
                                <p class="card-text text-muted small flex-grow-1">
                                    @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                                </p>
                            }
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-success fw-bold fs-5">
                                        @Html.FormatVNDForProduct(product.Price)
                                    </span>
                                    @if (product.Category != null)
                                    {
                                        <span class="badge bg-secondary">@product.Category.Name</span>
                                    }
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-box me-1"></i>
                                        @if (product.Stock > 0)
                                        {
                                            <span>Còn @product.Stock sản phẩm</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Hết hàng</span>
                                        }
                                    </small>
                                    
                                    <a asp-action="ProductDetails" asp-route-id="@product.Id" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-search fa-4x text-muted mb-4"></i>
                    <h3 class="text-muted">Không tìm thấy sản phẩm nào</h3>
                    <p class="text-muted">Hãy thử thay đổi bộ lọc tìm kiếm của bạn.</p>
                    <a asp-action="Shop" class="btn btn-primary">
                        <i class="fas fa-refresh me-2"></i>Xem tất cả sản phẩm
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model != null && Model.Any())
    {
        var search = ViewBag.Search as BacHa.Models.Service.ProductService.Dto.ProductSearch ?? new BacHa.Models.Service.ProductService.Dto.ProductSearch();
        var page = search.Page <= 0 ? 1 : search.Page;
        var pageSize = search.PageSize <= 0 ? 12 : search.PageSize;
        
        <nav aria-label="Product pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(page <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Shop" 
                       asp-route-Page="@(page-1)" 
                       asp-route-PageSize="@pageSize" 
                       asp-route-Query="@search.Query" 
                       asp-route-CategoryId="@search.CategoryId" 
                       asp-route-SortBy="">
                        <i class="fas fa-chevron-left"></i> Trước
                    </a>
                </li>
                <li class="page-item disabled">
                    <span class="page-link">Trang @(page)</span>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Shop" 
                       asp-route-Page="@(page+1)" 
                       asp-route-PageSize="@pageSize" 
                       asp-route-Query="@search.Query" 
                       asp-route-CategoryId="@search.CategoryId" 
                       asp-route-SortBy="">
                        Tiếp <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        // Add hover effects to product cards
        $(document).ready(function() {
            $('.product-card').hover(
                function() {
                    $(this).addClass('shadow-lg').removeClass('shadow-sm');
                },
                function() {
                    $(this).addClass('shadow-sm').removeClass('shadow-lg');
                }
            );
        });

        // Format VND currency
        function formatVND(amount) {
            return new Intl.NumberFormat('vi-VN', {
                style: 'currency',
                currency: 'VND'
            }).format(amount);
        }

        // Load view history
        function loadViewHistory() {
            $.get('@Url.Action("GetViewHistory", "Products")')
                .done(function(response) {
                    if (response.success && response.data && response.data.length > 0) {
                        var html = '<div class="row">';
                        response.data.forEach(function(product) {
                            html += `
                                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                                    <div class="card h-100 product-card shadow-sm">
                                        <div class="position-relative">
                                            <img src="${product.imageUrl || '/images/placeholder.svg'}" 
                                                 alt="${product.name}" 
                                                 class="card-img-top" 
                                                 style="height: 150px; object-fit: cover;">
                                        </div>
                                        <div class="card-body d-flex flex-column">
                                            <h6 class="card-title text-truncate" title="${product.name}">${product.name}</h6>
                                            <div class="mt-auto">
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <span class="text-success fw-bold">${formatVND(product.price)}</span>
                                                </div>
                                                <a href="/Products/ProductDetails/${product.id}" 
                                                   class="btn btn-outline-primary btn-sm w-100">
                                                    <i class="fas fa-eye me-1"></i>Xem lại
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `;
                        });
                        html += '</div>';
                        $('#viewHistoryContent').html(html);
                    } else {
                        $('#viewHistoryContent').html(`
                            <div class="text-center py-5">
                                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Chưa có lịch sử xem sản phẩm</h5>
                                <p class="text-muted">Hãy bắt đầu khám phá các sản phẩm để xem lịch sử.</p>
                            </div>
                        `);
                    }
                })
                .fail(function() {
                    $('#viewHistoryContent').html(`
                        <div class="text-center py-5">
                            <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                            <h5 class="text-danger">Lỗi tải lịch sử</h5>
                            <p class="text-muted">Không thể tải lịch sử xem sản phẩm.</p>
                        </div>
                    `);
                });
        }

        // Clear view history
        function clearViewHistory() {
            if (confirm('Bạn có chắc chắn muốn xóa toàn bộ lịch sử xem sản phẩm?')) {
                $.post('@Url.Action("ClearViewHistory", "Products")')
                    .done(function(response) {
                        if (response.success) {
                            loadViewHistory(); // Reload the content
                            // Update the badge in navigation
                            location.reload();
                        } else {
                            alert('Có lỗi xảy ra khi xóa lịch sử: ' + response.message);
                        }
                    })
                    .fail(function() {
                        alert('Có lỗi xảy ra khi xóa lịch sử.');
                    });
            }
        }

        // Show view history modal
        function showViewHistory() {
            $('#viewHistoryModal').modal('show');
            loadViewHistory();
        }
    </script>
}

