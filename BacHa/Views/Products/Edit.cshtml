@model BacHa.Models.Service.ProductService.ViewModels.ProductUpdateVM

@{
    ViewData["Title"] = "Sửa Sản phẩm";
}

<h1>Sửa Sản phẩm</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Tên sản phẩm *</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm (tùy chọn)"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label">Giá sản phẩm *</label>
                        <div class="input-group">
                            <input asp-for="Price" class="form-control" placeholder="0" type="number" step="0.01" min="0" />
                            <span class="input-group-text">₫</span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Stock" class="form-label">Số lượng tồn kho *</label>
                        <input asp-for="Stock" class="form-control" placeholder="0" type="number" min="0" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="form-label">Thể loại *</label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">-- Chọn thể loại --</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">@category.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="form-label">URL hình ảnh</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <div class="form-text">Nhập URL của hình ảnh sản phẩm (tùy chọn)</div>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Kích hoạt</label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập nhật Sản phẩm
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại Danh sách
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin Sản phẩm</h5>
            </div>
            <div class="card-body">
                <p><strong>Tên sản phẩm:</strong> Phải là duy nhất và mô tả rõ ràng.</p>
                <p><strong>Mô tả:</strong> Trường tùy chọn để mô tả chi tiết sản phẩm.</p>
                <p><strong>Giá:</strong> Giá bán của sản phẩm (đơn vị: VNĐ).</p>
                <p><strong>Tồn kho:</strong> Số lượng sản phẩm có sẵn.</p>
                <p><strong>Thể loại:</strong> Phân loại sản phẩm.</p>
                <p><strong>Hình ảnh:</strong> URL hình ảnh sản phẩm (tùy chọn).</p>
                <p><strong>Trạng thái:</strong> Sản phẩm hoạt động sẽ hiển thị cho khách hàng.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Real-time name validation
        $('#Name').on('blur', function() {
            var name = $(this).val();
            if (name.length > 0) {
                $.get('@Url.Action("CheckNameExists", "Products")', { name: name, excludeId: '@Model.Id' }, function(data) {
                    if (data.exists) {
                        $('#Name').addClass('is-invalid');
                        if ($('#name-error').length === 0) {
                            $('#Name').after('<div id="name-error" class="invalid-feedback">Tên sản phẩm đã tồn tại.</div>');
                        }
                    } else {
                        $('#Name').removeClass('is-invalid');
                        $('#name-error').remove();
                    }
                });
            }
        });

        // Preview image
        $('#ImageUrl').on('blur', function() {
            var imageUrl = $(this).val();
            if (imageUrl && imageUrl.startsWith('http')) {
                $('#image-preview').remove();
                $(this).after('<div id="image-preview" class="mt-2"><img src="' + imageUrl + '" alt="Preview" class="img-thumbnail" style="max-width: 200px; max-height: 200px;"></div>');
            } else {
                $('#image-preview').remove();
            }
        });
    </script>
}
