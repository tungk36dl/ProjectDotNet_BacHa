@model BacHa.Models.Role

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this role?</h4>
    <p>This action cannot be undone. If this role is assigned to any users, the deletion will be prevented.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Role Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@(Model.Description ?? "No description provided")</dd>

                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created At:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                    <dt class="col-sm-3">Updated At:</dt>
                    <dd class="col-sm-9">@(Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "Never")</dd>
                </dl>
            </div>
        </div>

        @if (Model.Users != null && Model.Users.Any())
        {
            <div class="card mt-3">
                <div class="card-header bg-danger text-white">
                    <h5><i class="fas fa-exclamation-triangle"></i> Warning: Users Assigned</h5>
                </div>
                <div class="card-body">
                    <p>This role is currently assigned to <strong>@Model.Users.Count</strong> user(s):</p>
                    <ul class="list-group">
                        @foreach (var user in Model.Users.Take(5))
                        {
                            <li class="list-group-item">@user.UserName (@user.Email)</li>
                        }
                        @if (Model.Users.Count > 5)
                        {
                            <li class="list-group-item text-muted">... and @(Model.Users.Count - 5) more</li>
                        }
                    </ul>
                    <p class="mt-2 text-danger"><strong>You cannot delete this role until all users are reassigned to other roles.</strong></p>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Actions</h5>
            </div>
            <div class="card-body">
                @if (Model.Users != null && Model.Users.Any())
                {
                    <div class="alert alert-danger">
                        <strong>Cannot Delete:</strong> Role is in use by @Model.Users.Count user(s).
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-grid gap-2">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5>Role Statistics</h5>
            </div>
            <div class="card-body">
                <p><strong>Total Users:</strong> @(Model.Users?.Count ?? 0)</p>
                <p><strong>Active Users:</strong> @(Model.Users?.Count(u => u.IsActive) ?? 0)</p>
                <p><strong>Inactive Users:</strong> @(Model.Users?.Count(u => !u.IsActive) ?? 0)</p>
            </div>
        </div>
    </div>
</div>

