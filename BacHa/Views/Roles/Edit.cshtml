@model BacHa.Models.Service.RoleService.ViewModels.RoleUpdateVM

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter role name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter role description (optional)"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Role
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                    <i class="fas fa-eye"></i> View Details
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Role Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Role Name:</strong> Must be unique and descriptive.</p>
                <p><strong>Description:</strong> Optional field to describe the role's purpose.</p>
                <p><strong>Status:</strong> Active roles can be assigned to users.</p>
                <hr>
                <p><small class="text-muted">Note: Changing role properties will affect all users assigned to this role.</small></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Real-time name validation (excluding current role)
        $('#Name').on('blur', function() {
            var name = $(this).val();
            var currentId = $('#Id').val();
            if (name.length > 0) {
                $.get('@Url.Action("CheckNameExists", "Roles")', { name: name, excludeId: currentId }, function(data) {
                    if (data.exists) {
                        $('#Name').addClass('is-invalid');
                        if ($('#name-error').length === 0) {
                            $('#Name').after('<div id="name-error" class="invalid-feedback">Role name already exists.</div>');
                        }
                    } else {
                        $('#Name').removeClass('is-invalid');
                        $('#name-error').remove();
                    }
                });
            }
        });
    </script>
}

