@model IEnumerable<BacHa.Models.Role>

@{
    ViewData["Title"] = "Roles Management";
}

<h1>Roles Management</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Role
        </a>
        <a asp-action="Index" class="btn btn-secondary" asp-route-page="1">
            <i class="fas fa-refresh"></i> Refresh
        </a>
    </div>
    <div class="col-md-6">
        <form method="get" class="d-flex">
            <input type="text" name="Query" class="form-control me-2" placeholder="Search roles..." value="@ViewBag.Search?.Query">
            <select name="IsActive" class="form-select me-2" style="width: auto;">
                <option value="">All Status</option>
                <option value="true" selected="@(ViewBag.Search?.IsActive == true)">Active</option>
                <option value="false" selected="@(ViewBag.Search?.IsActive == false)">Inactive</option>
            </select>
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@item.Name</strong>
                    </td>
                    <td>@(item.Description ?? "-")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(item.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-users-cog fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No roles found</h4>
        <p class="text-muted">Create your first role to get started.</p>
        <a asp-action="Create" class="btn btn-primary">Create Role</a>
    </div>
}

@{
    var search = ViewBag.Search as BacHa.Models.Service.RoleService.Dto.RoleSearch ?? new BacHa.Models.Service.RoleService.Dto.RoleSearch();
    var page = search.Page <= 0 ? 1 : search.Page;
    var pageSize = search.PageSize <= 0 ? 10 : search.PageSize;
}

<nav aria-label="Role pagination">
    <ul class="pagination justify-content-center">
        <li class="page-item @(page <= 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-Page="@(page-1)" asp-route-PageSize="@pageSize" asp-route-Query="@search.Query" asp-route-IsActive="@search.IsActive">Previous</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Page @(page)</span>
        </li>
        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-Page="@(page+1)" asp-route-PageSize="@pageSize" asp-route-Query="@search.Query" asp-route-IsActive="@search.IsActive">Next</a>
        </li>
    </ul>
</nav>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
